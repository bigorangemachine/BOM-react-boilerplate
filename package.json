{
  "name": "react-webpack",
  "version": "0.0.0",
  "description": "Demo Project - React/Webpack",
  "main": "index.js",
  "author": "BigOrangeMachine",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigorangemachine/BOM-react-boilerplate.git"
  },
  "scripts": {
    "http-server": "node http-server.js > http-server.log",
    "coverage": "babel-cli ./node_modules/.bin/isparta cover --include 'src/**/*.js*' _mocha",
    "test": "cross-env NODE_ENV=test nyc mocha-webpack --require babel-core/register --webpack-config webpack.config.js \"pkg/**/*.test.jsx\" --require jsdom-global/register",
    "test-watch": "npm run test -- --watch",
    "postinstall": "mkdir -p ./_cache/ && chmod 777 ./_cache/ && npm run build",
    "build": "webpack --config webpack.config.js -d",
    "test-watch": "npm run http-server | npm run test -- --watch",
    "watch": "npm run http-server | npm run build -- --watch"
  },
  "dependencies": {
    "node-default-server": "git://github.com/bigorangemachine/BOM-default-server.git#v0.0.3",
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "minireset.css": "0.0.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "sass-loader": "^4.1.0",
    "style-loader": "^0.13.1",
    "underscore": "^1.8.3",
    "webpack": "^1.12.8",
    "yargs": "^6.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-istanbul": "^3.0.0",
    "cross-env": "^3.1.3",
    "istanbul": "^0.4.5",
    "jsdom": "^9.9.1",
    "jsdom-global": "^2.1.0",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "nyc": "^10.0.0",
    "react-shallow-testutils": "^2.0.0",
    "webpack-node-externals": "^1.5.4"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "webpack.*.js",
      ".tmp",
      "node_modules"
    ]
  }
}
